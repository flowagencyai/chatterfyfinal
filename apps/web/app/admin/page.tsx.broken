    try {
      const params = new URLSearchParams({ 
        ...(usageOrg && { org: usageOrg }),
        ...(usageFrom && { from: usageFrom }),
        ...(usageTo && { to: usageTo })
      });
      
      const response = await fetch(`${API_BASE}/admin/usage?${params}`);
      const data = await response.json();
      setUsageRows(data.data || []);
